<%= f.fields_for(:usedmethods) do |usedmethods_form| %>
<tr class="fields">
  <td>
        <%= usedmethods_form.collection_select( :deliverymethod_id, @deliverymethods, :id, :dmcod, options ={:prompt => "Select a Method"}) %>

    <%= usedmethods_form.hidden_field(:_destroy, :class => "field") %>

  </td>

  <% if current_page?(new_source_path) || current_page?(edit_source_path) %>
      <td>

        <%= link_to_remove_fields('<b class="icon-remove">x</b>'.html_safe, usedmethods_form, :title => "Delete this Method.") %>
      </td>
  <% end %>



</tr>

<% end %>