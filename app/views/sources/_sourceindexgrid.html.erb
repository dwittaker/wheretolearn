

<div id="masonry-container" class="transitions-enabled infinite-scroll  clearfix">
  <% @sources.each do |source| %>

      <div class="boxd3 col2" >

        <h4><%= link_to source.name, source,:class => "gridlink" %></h4>
        <p><strong>Description</strong>: <%= truncate(source.description, length: 100) %></p>
        <p><strong>URL</strong>: <%= link_to truncate(source.weburl, :length => 20), "http://#{source.weburl}", :class => "gridlink", :target => "_blank" %></p>
        <p><strong>Type</strong>: <%= source.sourcetype.stdesc %></p>
        <p><strong>Methods</strong>:<br>
          <% if (source.usedmethods.length > 0) %>
            <div >
              <% source.usedmethods.each do |sm| %>
                  <span class="label label-default"><%= sm.deliverymethod.dmdesc %></span>
              <% end %>
            </div>
        <% end %>
        </p>

        <p>
        <%= link_to glyph('info-sign'), source %>
        <%= link_to glyph(:edit), edit_source_path(source) %>
        <%= link_to glyph(:remove), source, method: :delete, data: { confirm: 'Are you sure?' } %></p>


      </div>
  <% end %>
</div>

<br>
