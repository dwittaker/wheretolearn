<%= form_for(@portfolio) do |f| %>
  <% if @portfolio.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@portfolio.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
      <% @portfolio.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :source %><br />
    <%= f.collection_select :source_id, Source.find(:all), :id, :name, :prompt => "Select a Source" %>
  </div>
    <div class="field">
      <%= f.label 'Subject' %><br />

      <%= collection_select(:subject, :id, @subjects, :id, :name, options ={:prompt => "Select a Subject"}, :class =>"subject") %>

    </div>

    <div class="field">
      <%= f.label :subjectmodule %><br />
      <%= f.collection_select :subjectmodule_id, SubjectModule.find(:all), :id, :smname, :prompt => "Select a Module" %>
    </div>


  <div class="field">
    <%= f.label :pweburl %><br />
    <%= f.text_field :pweburl %>
  </div>
  <div class="field">
    <%= f.label :physaddress %><br />
    <%= f.text_area :physaddress, :rows => 3 %>
  </div>
  <div class="field">
    <%= f.label :cost %><br />
    <%= f.text_field :cost, size: 15 %>
    <%= select_tag("currency", options_for_select(@currlist), :prompt => "Select a Currency") %>
  </div>

  <div class="field">
    <%= f.label :costtype_id %><br />
    <%= f.collection_select :costtype_id, Costtype.find(:all), :id, :costname, :prompt => "Select a Type" %>
  </div>
  <div class="field">
    <%= f.label :schedtype %><br />
    <%= f.number_field :schedtype %>
  </div>
  <div class="field">
    <%= f.label :method %><br />
    <%= f.number_field :method %>
  </div>
  <div class="field">
    <%= f.label :startdate %><br />
    <%= f.text_field :startdate, :class => 'datepicker', :size => 10, :maxlength => 10 %>
  </div>
  <div class="field">
    <%= f.label :enddate %><br />
    <%= f.text_field :enddate, :class => 'datepicker', :size => 10, :maxlength => 10 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
