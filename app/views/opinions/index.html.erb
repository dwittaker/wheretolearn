<h1>Listing opinions</h1>

<table>
  <tr>
    <th>Opinion</th>
    <th>Rating</th>
    <th>Comment</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @opinion.each do |opinion| %>
  <tr>
    <td><%= opinion.optitle %></td>
    <td><%= opinion.rating %></td>
    <td><%= opinion.comment %></td>
    <td><%= opinion.username %></td>
    <td><%= link_to 'Show', polymorphic_path([@opinionable,opinion]) %></td>
    <td><%= link_to 'Edit', edit_polymorphic_path([@opinionable,opinion]) %></td>
    <td><%= link_to 'Destroy', polymorphic_path([@opinionable,opinion]), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Opinion', polymorphic_path([:new, @opinionable, :opinion]) %>
