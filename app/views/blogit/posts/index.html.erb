

<div class="row">
  <div class="col-md-8">
    <%= login_required class: "actions", id: "new_blog_post_link" do %>
        <%= link_to t(:new_blog_post, scope: 'blogit.posts'), new_post_path,:class => "btn btn-success btn-mini" %>
    <% end %>
  </div>
  <div class="col-md-4">
    <div id="search" >

      <%= render partial: 'search/searchmodel', locals: {:clearpath => blogit_path} %>
    </div>
  </div>
</div>

<br><br>
<div class="page-header">
  <h1>Browse our Blogs</h1>
</div>

<% if @posts.any? %>

  <%= render partial: "blogit/posts/post",
    collection: @posts,
    spacer_template: "blog_post_spacer",
    locals: {show_comments_count: (Blogit.configuration.include_comments == :active_records) }  %>
<% else %>

  <%= render partial: "blogit/posts/empty" %>

<% end %>

<%= render "pagination" %>
