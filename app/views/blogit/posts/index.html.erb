<% title "Browse our Blogs" %>

<div class="row">
  <div class="page-header col-md-12">
    <h1>
      <% if (login_required class: "actions", id: "new_blog_post_link") then %>
          <span style="border-right:1px #F5D15F solid;margin-right: 10px">Browse our Blogs&nbsp;</span><%= link_to t(:new_blog_post, scope: 'blogit.posts'), new_post_path,:class => "btn btn-success btn-mini" %>
      <% else %>
          <span >Browse our Blogs&nbsp;</span>
      <% end %>
      <%= render partial: 'search/searchmodel', locals: {:clearpath => blogit_path} %>
    </h1>
  </div>
</div>






<% if @posts.any? %>

  <%= render partial: "blogit/posts/post",
    collection: @posts,
    spacer_template: "blog_post_spacer",
    locals: {show_comments_count: (Blogit.configuration.include_comments == :active_records) }  %>
<% else %>

  <%= render partial: "blogit/posts/empty" %>

<% end %>

<%= render "pagination" %>
