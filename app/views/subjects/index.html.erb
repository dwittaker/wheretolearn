<h1>Listing subjects</h1>

<table>
  <tr>
    
    <th>Name</th>
    <th>Description</th>
    <th>Purpose</th>
    <th>Complexity</th>
    
    <th>Category1</th>
    <th>Category2</th>
    <th>Category3</th>
    <th>Avgtimetolearn</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @subjects.each do |subject| %>

  <tr>
    
    <td><%= subject.name %></td>
    <td><%= subject.description %></td>
    <td><%= subject.purpose %></td>
    <td><%= subject.complexity %></td>
    
    <td><%= subject.category1.cat1desc %></td>
    <td><%= subject.category2.cat2desc %></td>
    <td><%= subject.category3.cat3desc %></td>
    <td><%= subject.avgtimetolearn %></td>
    <td><%= link_to 'Show', subject %></td>
    <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
    <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
